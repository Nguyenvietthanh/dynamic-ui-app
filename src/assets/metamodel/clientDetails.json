    {
        "alias": "insured",
        "baseURI": "insureds",
        "pathToResource": ["$._links.item[0].href"]
    },
    {
        "alias": "LSTC",
        "baseURI": "insured",
        "pathToResource": [
            "$._links['insured:coverages'].href",
